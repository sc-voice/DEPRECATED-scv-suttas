      "segments": [
        {
          "scid": "thag1.100:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag1.100:2.1",
          "pli": "Ekakanipāta",
          "en": "The Book of the Ones"
        },
        {
          "scid": "thag1.100:3.1",
          "pli": "Dasamavagga",
          "en": "Chapter Ten"
        },
        {
          "scid": "thag1.100:4.1",
          "pli": "1.100. (Dutiya) Devasabhattheragāthā",
          "en": "1.100. Devasabha (2nd)"
        },
        {
          "scid": "thag1.100:5.1",
          "pli": "“Sammappadhānasampanno,",
          "en": "Accomplished in the four right efforts,"
        },
        {
          "scid": "thag1.100:5.2",
          "pli": "Satipaṭṭhānagocaro;",
          "en": "mindfulness meditation is your territory;"
        },
        {
          "scid": "thag1.100:5.3",
          "pli": "Vimuttikusumasañchanno,",
          "en": "festooned with the flowers of liberation,"
        },
        {
          "scid": "thag1.100:5.4",
          "pli": "<span class=\"var\" title=\"parinibbāyissatyanāsavoti (s2, s3) | parinibbātyanāsavoti (pts2)\" id=\"note69\">Parinibbissatyanāsavo”ti</span>.",
          "en": "you’ll realize quenching without defilements."
        },
        {
          "scid": "thag1.100:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.100:6.2",
          "pli": "Devasabho thero ….",
          "en": ""
        },
        {
          "scid": "thag1.100:6.3",
          "pli": "Vaggo dasamo.",
          "en": ""
        },
        {
          "scid": "thag1.100:7.1",
          "pli": "Tassuddānaṃ",
          "en": ""
        },
        {
          "scid": "thag1.100:8.1",
          "pli": "Paripuṇṇako ca vijayo,",
          "en": ""
        },
        {
          "scid": "thag1.100:8.2",
          "pli": "erako mettajī muni;",
          "en": ""
        },
        {
          "scid": "thag1.100:8.3",
          "pli": "Cakkhupālo khaṇḍasumano,",
          "en": ""
        },
        {
          "scid": "thag1.100:8.4",
          "pli": "tisso ca abhayo tathā;",
          "en": ""
        },
        {
          "scid": "thag1.100:8.5",
          "pli": "Uttiyo ca mahāpañño,",
          "en": ""
        },
        {
          "scid": "thag1.100:8.6",
          "pli": "thero devasabhopi cāti.",
          "en": ""
        }
      ],
