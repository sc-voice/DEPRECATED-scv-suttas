        {
          "scid": "thag1.18:4.1",
          "pli": "1.18. Siṅgālapituttheragāthā",
          "en": "1.18. Siṅgāla’s Father"
        },
        {
          "scid": "thag1.18:5.1",
          "pli": "“Ahu buddhassa dāyādo,",
          "en": "There was an heir of the Buddha,"
        },
        {
          "scid": "thag1.18:5.2",
          "pli": "bhikkhu bhesakaḷāvane;",
          "en": "a monk in Bhesakaḷā forest,"
        },
        {
          "scid": "thag1.18:5.3",
          "pli": "Kevalaṃ aṭṭhisaññāya,",
          "en": "who suffused the entire earth "
        },
        {
          "scid": "thag1.18:5.4",
          "pli": "apharī <span class=\"var\" title=\"paṭhaviṃ (bj, s2, s3, pts1-2)\" id=\"note15\">pathaviṃ</span> imaṃ;",
          "en": "with the perception of bones."
        },
        {
          "scid": "thag1.18:5.5",
          "pli": "Maññehaṃ kāmarāgaṃ so,",
          "en": "I think he will quickly"
        },
        {
          "scid": "thag1.18:5.6",
          "pli": "khippameva <span class=\"var\" title=\"pahiyyatīti (bj) | pahīyatīti (s2, s3, pts1) | pahassati (pts2)\" id=\"note16\">pahissatī”ti</span>.",
          "en": "get rid of sensual desire."
        },
        {
          "scid": "thag1.18:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.18:6.2",
          "pli": "<span class=\"var\" title=\"sigālapitu (bj)\" id=\"note17\">Siṅgālapitā</span> thero ….",
          "en": ""
        }
      ],
