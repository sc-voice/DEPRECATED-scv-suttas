        {
          "scid": "thag1.19:5.1",
          "pli": "<span class=\"cross\" title=\"^dhp76-89#80.1 [76. Rādhattheravatthu/80. Paṇḍitasāmaṇeravatthu] | ^dhp129-145#139.1 [129. Chabbaggiyabhikkhuvatthu/139. Sukhasāmaṇeravatthu] | ^thag16.7#12 [Aṅgulimālattheragāthā]\" id=\"note19\">*</span>“Udakañhi nayanti nettikā,",
          "en": "Irrigators guide water,"
        },
        {
          "scid": "thag1.19:5.2",
          "pli": "Usukārā <span class=\"var\" title=\"damayanti (mr)\" id=\"note20\">namayanti</span> tejanaṃ;",
          "en": "fletchers shape arrows,"
        },
        {
          "scid": "thag1.19:5.3",
          "pli": "Dāruṃ <span class=\"var\" title=\"damayanti (mr)\" id=\"note21\">namayanti</span> tacchakā,",
          "en": "carpenters carve wood;"
        },
        {
          "scid": "thag1.19:5.4",
          "pli": "Attānaṃ damayanti subbatā”ti.",
          "en": "those true to their vows tame themselves."
