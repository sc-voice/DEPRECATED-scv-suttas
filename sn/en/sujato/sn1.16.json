    {
      "segments": [
        {
          "scid": "sn1.16:1.1",
          "pli": "“Niddā tandī vijambhitā,",
          "en": "“Sleepiness, sloth, and yawning,"
        },
        {
          "scid": "sn1.16:1.2",
          "pli": "Aratī bhattasammado;",
          "en": "discontent, and sleepiness after eating:"
        },
        {
          "scid": "sn1.16:1.3",
          "pli": "Etena nappakāsati,",
          "en": "because of this the noble path"
        },
        {
          "scid": "sn1.16:1.4",
          "pli": "Ariyamaggo idha pāṇinan”ti.",
          "en": "isn’t clear for living creatures here.”"
        },
        {
          "scid": "sn1.16:2.1",
          "pli": "“Niddaṃ tandiṃ vijambhitaṃ,",
          "en": "“Sleepiness, sloth, and yawning,"
        },
        {
          "scid": "sn1.16:2.2",
          "pli": "Aratiṃ bhattasammadaṃ;",
          "en": "discontent, and sleepiness after eating:"
        },
        {
          "scid": "sn1.16:2.3",
          "pli": "Vīriyena naṃ paṇāmetvā,",
          "en": "when this is energetically fended off,"
        },
        {
          "scid": "sn1.16:2.4",
          "pli": "Ariyamaggo visujjhatī”ti.",
          "en": "the noble path is cleared.”"
        }
      ],
