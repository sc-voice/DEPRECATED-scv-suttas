    {
      "segments": [
        {
          "scid": "sn22.19:1.1",
          "pli": "Sāvatthinidānaṃ.",
          "en": "At Sāvatthī."
        },
        {
          "scid": "sn22.19:1.2",
          "pli": "“Rūpaṃ, bhikkhave, dukkhaṃ.",
          "en": "“Mendicants, form is suffering."
        },
        {
          "scid": "sn22.19:1.3",
          "pli": "Yopi hetu yopi paccayo rūpassa uppādāya, sopi dukkho.",
          "en": "The cause and condition that gives rise to form is also suffering."
        },
        {
          "scid": "sn22.19:1.4",
          "pli": "Dukkhasambhūtaṃ, bhikkhave, rūpaṃ kuto sukhaṃ bhavissati.",
          "en": "Since form is produced by what is suffering, how could it be happiness?"
        },
        {
          "scid": "sn22.19:1.5",
          "pli": "Vedanā dukkhā …",
          "en": "Feeling is suffering …"
        },
        {
          "scid": "sn22.19:1.6",
          "pli": "saññā dukkhā …",
          "en": "Perception is suffering …"
        },
        {
          "scid": "sn22.19:1.7",
          "pli": "saṅkhārā dukkhā …",
          "en": "Choices are suffering …"
        },
        {
          "scid": "sn22.19:1.8",
          "pli": "viññāṇaṃ dukkhaṃ.",
          "en": "Consciousness is suffering."
        },
        {
          "scid": "sn22.19:1.9",
          "pli": "Yopi hetu yopi paccayo viññāṇassa uppādāya, sopi dukkho.",
          "en": "The cause and condition that gives rise to consciousness is also suffering."
        },
        {
          "scid": "sn22.19:1.10",
          "pli": "Dukkhasambhūtaṃ, bhikkhave, viññāṇaṃ kuto sukhaṃ bhavissati.",
          "en": "Since consciousness is produced by what is suffering, how could it be happiness?"
        },
        {
          "scid": "sn22.19:1.11",
          "pli": "Evaṃ passaṃ … pe …",
          "en": "Seeing this …"
        },
        {
          "scid": "sn22.19:1.12",
          "pli": "nāparaṃ itthattāyā’ti pajānātī”ti.",
          "en": "They understand: ‘… there is no return to any state of existence.’”"
        },
        {
          "scid": "sn22.19:1.13",
          "pli": "Aṭṭhamaṃ.",
          "en": ""
        }
      ],
