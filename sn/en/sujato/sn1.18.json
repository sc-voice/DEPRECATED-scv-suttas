    {
      "segments": [
        {
          "scid": "sn1.18:1.1",
          "pli": "“Hirīnisedho puriso,",
          "en": "“Can a person constrained by conscience"
        },
        {
          "scid": "sn1.18:1.2",
          "pli": "koci lokasmiṃ vijjati;",
          "en": "be found in the world?"
        },
        {
          "scid": "sn1.18:1.3",
          "pli": "Yo nindaṃ apabodhati,",
          "en": "Who shies away from blame,"
        },
        {
          "scid": "sn1.18:1.4",
          "pli": "asso bhadro kasāmivā”ti.",
          "en": "like a fine horse from the whip?”"
        },
        {
          "scid": "sn1.18:2.1",
          "pli": "“Hirīnisedhā tanuyā,",
          "en": "“Few are those constrained by conscience,"
        },
        {
          "scid": "sn1.18:2.2",
          "pli": "ye caranti sadā satā;",
          "en": "who live always mindful."
        },
        {
          "scid": "sn1.18:2.3",
          "pli": "Antaṃ dukkhassa pappuyya,",
          "en": "Having reached the end of suffering,"
        },
        {
          "scid": "sn1.18:2.4",
          "pli": "caranti visame saman”ti.",
          "en": "they live smoothly in the rough.”"
        }
      ],
