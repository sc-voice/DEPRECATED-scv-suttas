    {
      "segments": [
        {
          "scid": "sn22.73:1.1",
          "pli": "Sāvatthinidānaṃ.",
          "en": "At Sāvatthī."
        },
        {
          "scid": "sn22.73:1.2",
          "pli": "“Assutavā, bhikkhave, puthujjano rūpassa assādañca ādīnavañca nissaraṇañca yathābhūtaṃ nappajānāti.",
          "en": "“Mendicants, an uneducated ordinary person doesn’t truly understand the gratification, the drawback, and the escape when it comes to form,"
        },
        {
          "scid": "sn22.73:1.3",
          "pli": "Vedanāya …",
          "en": "feeling,"
        },
        {
          "scid": "sn22.73:1.4",
          "pli": "saññāya …",
          "en": "perception,"
        },
        {
          "scid": "sn22.73:1.5",
          "pli": "saṅkhārānaṃ …",
          "en": "choices,"
        },
        {
          "scid": "sn22.73:1.6",
          "pli": "viññāṇassa assādañca ādīnavañca nissaraṇañca yathābhūtaṃ nappajānāti.",
          "en": "and consciousness."
        },
        {
          "scid": "sn22.73:1.7",
          "pli": "Sutavā ca kho, bhikkhave, ariyasāvako rūpassa assādañca ādīnavañca nissaraṇañca yathābhūtaṃ pajānāti.",
          "en": "An educated noble disciple does truly understand the gratification, the drawback, and the escape when it comes to form,"
        },
        {
          "scid": "sn22.73:1.8",
          "pli": "Vedanāya …",
          "en": "feeling,"
        },
        {
          "scid": "sn22.73:1.9",
          "pli": "saññāya …",
          "en": "perception,"
        },
        {
          "scid": "sn22.73:1.10",
          "pli": "saṅkhārānaṃ …",
          "en": "choices,"
        },
        {
          "scid": "sn22.73:1.11",
          "pli": "viññāṇassa assādañca ādīnavañca nissaraṇañca yathābhūtaṃ pajānātī”ti.",
          "en": "and consciousness.”"
        },
        {
          "scid": "sn22.73:1.12",
          "pli": "Paṭhamaṃ.",
          "en": ""
        }
      ],
