    {
      "segments": [
        {
          "scid": "sn1.65:1.1",
          "pli": "“Kiṃsu sambandhano loko,",
          "en": "“What binds the world?"
        },
        {
          "scid": "sn1.65:1.2",
          "pli": "kiṃsu tassa vicāraṇaṃ;",
          "en": "What explores it?"
        },
        {
          "scid": "sn1.65:1.3",
          "pli": "Kissassu vippahānena,",
          "en": "With the giving up of what"
        },
        {
          "scid": "sn1.65:1.4",
          "pli": "sabbaṃ chindati bandhanan”ti.",
          "en": "are all bonds severed?”"
        },
        {
          "scid": "sn1.65:2.1",
          "pli": "“Nandīsambandhano loko,",
          "en": "“Delight binds the world."
        },
        {
          "scid": "sn1.65:2.2",
          "pli": "vitakkassa vicāraṇaṃ;",
          "en": "Thought explores it."
        },
        {
          "scid": "sn1.65:2.3",
          "pli": "Taṇhāya vippahānena,",
          "en": "With the giving up of craving"
        },
        {
          "scid": "sn1.65:2.4",
          "pli": "sabbaṃ chindati bandhanan”ti.",
          "en": "all bonds are severed.”"
        }
      ],
