    {
      "segments": [
        {
          "scid": "sn22.9:1.1",
          "pli": "Sāvatthinidānaṃ.",
          "en": "At Sāvatthī."
        },
        {
          "scid": "sn22.9:1.2",
          "pli": "“Rūpaṃ, bhikkhave, aniccaṃ atītānāgataṃ;",
          "en": "“Mendicants, form of the past and future is impermanent,"
        },
        {
          "scid": "sn22.9:1.3",
          "pli": "ko pana vādo paccuppannassa.",
          "en": "not to mention the present."
        },
        {
          "scid": "sn22.9:1.4",
          "pli": "Evaṃ passaṃ, bhikkhave, sutavā ariyasāvako atītasmiṃ rūpasmiṃ anapekkho hoti;",
          "en": "Seeing this, a learned noble disciple doesn’t worry about past form,"
        },
        {
          "scid": "sn22.9:1.5",
          "pli": "anāgataṃ rūpaṃ nābhinandati;",
          "en": "doesn’t look forward to enjoying future form,"
        },
        {
          "scid": "sn22.9:1.6",
          "pli": "paccuppannassa rūpassa nibbidāya virāgāya nirodhāya paṭipanno hoti.",
          "en": "and they practice for the disillusionment, fading away, and cessation of present form."
        },
        {
          "scid": "sn22.9:1.7",
          "pli": "Vedanā aniccā … pe …",
          "en": "Feeling …"
        },
        {
          "scid": "sn22.9:1.8",
          "pli": "saññā aniccā …",
          "en": "Perception …"
        },
        {
          "scid": "sn22.9:1.9",
          "pli": "saṅkhārā aniccā atītānāgatā;",
          "en": "Choices …"
        },
        {
          "scid": "sn22.9:1.10",
          "pli": "ko pana vādo paccuppannānaṃ.",
          "en": ""
        },
        {
          "scid": "sn22.9:1.11",
          "pli": "Evaṃ passaṃ, bhikkhave, sutavā ariyasāvako atītesu saṅkhāresu anapekkho hoti;",
          "en": ""
        },
        {
          "scid": "sn22.9:1.12",
          "pli": "anāgate saṅkhāre nābhinandati;",
          "en": ""
        },
        {
          "scid": "sn22.9:1.13",
          "pli": "paccuppannānaṃ saṅkhārānaṃ nibbidāya virāgāya nirodhāya paṭipanno hoti.",
          "en": ""
        },
        {
          "scid": "sn22.9:1.14",
          "pli": "Viññāṇaṃ aniccaṃ atītānāgataṃ;",
          "en": "Consciousness of the past and future is impermanent,"
        },
        {
          "scid": "sn22.9:1.15",
          "pli": "ko pana vādo paccuppannassa.",
          "en": "not to mention the present."
        },
        {
          "scid": "sn22.9:1.16",
          "pli": "Evaṃ passaṃ, bhikkhave, sutavā ariyasāvako atītasmiṃ viññāṇasmiṃ anapekkho hoti;",
          "en": "Seeing this, a learned noble disciple doesn’t worry about past consciousness,"
        },
        {
          "scid": "sn22.9:1.17",
          "pli": "anāgataṃ viññāṇaṃ nābhinandati;",
          "en": "doesn’t look forward to enjoying future consciousness,"
        },
        {
          "scid": "sn22.9:1.18",
          "pli": "paccuppannassa viññāṇassa nibbidāya virāgāya nirodhāya paṭipanno hotī”ti.",
          "en": "and they practice for the disillusionment, fading away, and cessation of present consciousness.”"
        },
        {
          "scid": "sn22.9:1.19",
          "pli": "Navamaṃ.",
          "en": ""
        }
      ],
