      "expandable": false
    },
    {
      "segments": [
        {
          "scid": "sn47.63-72:1.1",
          "pli": "“Yāvatā, bhikkhave, sattā apadā vā dvipadā vā catuppadā vā bahuppadā vā”ti vitthāretabbaṃ.",
          "en": "“Mendicants, the Realized One, the perfected one, the fully awakened Buddha, is said to be the best of all sentient beings—be they footless, with two feet, four feet, or many feet …” "
        },
        {
          "scid": "sn47.63-72:1.2",
          "pli": "Appamādavaggo sattamo.",
          "en": "(To be expanded as in SN 45.139–148.)"
        },
        {
          "scid": "sn47.63-72:2.1",
          "pli": "Tathāgataṃ padaṃ kūṭaṃ,",
          "en": "The Realized One, footprint, roof peak,"
        },
        {
          "scid": "sn47.63-72:2.2",
          "pli": "mūlaṃ sāro ca vassikaṃ;",
          "en": "roots, heartwood, jasmine,"
        },
        {
          "scid": "sn47.63-72:2.3",
          "pli": "Rājā candimasūriyā,",
          "en": "monarch, sun and moon,"
        },
        {
          "scid": "sn47.63-72:2.4",
          "pli": "vatthena dasamaṃ padanti.",
          "en": "and cloth is the tenth."
        }
      ],
