    {
      "segments": [
        {
          "scid": "sn45.64-68:1.1",
          "pli": "“Ekadhammo, bhikkhave, bahūpakāro ariyassa aṭṭhaṅgikassa maggassa uppādāya.",
          "en": "“Mendicants, one thing helps give rise to the noble eightfold path."
        },
        {
          "scid": "sn45.64-68:1.2",
          "pli": "Katamo ekadhammo?",
          "en": "What one thing?"
        },
        {
          "scid": "sn45.64-68:1.3",
          "pli": "Yadidaṃ—sīlasampadā … pe …",
          "en": "It’s accomplishment in ethics. …”"
        },
        {
          "scid": "sn45.64-68:1.4",
          "pli": "yadidaṃ—chandasampadā … pe …",
          "en": "“… accomplishment in enthusiasm …”"
        },
        {
          "scid": "sn45.64-68:1.5",
          "pli": "yadidaṃ—attasampadā … pe …",
          "en": "“… accomplishment in self-development …”"
        },
        {
          "scid": "sn45.64-68:1.6",
          "pli": "yadidaṃ—diṭṭhisampadā … pe …",
          "en": "“… accomplishment in view …”"
        },
        {
          "scid": "sn45.64-68:1.7",
          "pli": "yadidaṃ—appamādasampadā … pe ….",
          "en": "“… accomplishment in diligence …”"
        },
        {
          "scid": "sn45.64-68:1.8",
          "pli": "Chaṭṭhaṃ.",
          "en": ""
        }
      ],
