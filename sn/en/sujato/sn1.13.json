    {
      "segments": [
        {
          "scid": "sn1.13:1.1",
          "pli": "Sāvatthinidānaṃ.",
          "en": "At Sāvatthī."
        },
        {
          "scid": "sn1.13:1.2",
          "pli": "Ekamantaṃ ṭhitā kho sā devatā bhagavato santike imaṃ gāthaṃ abhāsi:",
          "en": "Standing to one side, that deity recited this verse in the Buddha’s presence:"
        },
        {
          "scid": "sn1.13:2.1",
          "pli": "“Natthi puttasamaṃ pemaṃ,",
          "en": "“There’s no love like that for a child,"
        },
        {
          "scid": "sn1.13:2.2",
          "pli": "natthi gosamitaṃ dhanaṃ;",
          "en": "no wealth equal to cattle,"
        },
        {
          "scid": "sn1.13:2.3",
          "pli": "Natthi sūriyasamā ābhā,",
          "en": "no light like that of the sun,"
        },
        {
          "scid": "sn1.13:2.4",
          "pli": "samuddaparamā sarā”ti.",
          "en": "and of waters the ocean is paramount.”"
        },
        {
          "scid": "sn1.13:3.1",
          "pli": "“Natthi attasamaṃ pemaṃ,",
          "en": "“There’s no love like that for oneself,"
        },
        {
          "scid": "sn1.13:3.2",
          "pli": "natthi dhaññasamaṃ dhanaṃ;",
          "en": "no wealth equal to grain,"
        },
        {
          "scid": "sn1.13:3.3",
          "pli": "Natthi paññāsamā ābhā,",
          "en": "no light like that of wisdom,"
        },
        {
          "scid": "sn1.13:3.4",
          "pli": "vuṭṭhi ve paramā sarā”ti.",
          "en": "and of waters the rain is paramount.”"
        }
      ],
