    {
      "segments": [
        {
          "scid": "sn22.51:1.1",
          "pli": "Sāvatthinidānaṃ.",
          "en": "At Sāvatthī."
        },
        {
          "scid": "sn22.51:1.2",
          "pli": "“Aniccaññeva, bhikkhave, bhikkhu rūpaṃ aniccanti passati. Sāssa hoti sammādiṭṭhi.",
          "en": "“Mendicants, form really is impermanent. A mendicant sees that it is impermanent: that’s their right view."
        },
        {
          "scid": "sn22.51:1.3",
          "pli": "Sammā passaṃ nibbindati.",
          "en": "Seeing rightly, they become disillusioned."
        },
        {
          "scid": "sn22.51:1.4",
          "pli": "Nandikkhayā rāgakkhayo, rāgakkhayā nandikkhayo.",
          "en": "When relishing ends, greed ends. When greed ends, relishing ends."
        },
        {
          "scid": "sn22.51:1.5",
          "pli": "Nandirāgakkhayā cittaṃ vimuttaṃ suvimuttanti vuccati.",
          "en": "When relishing and greed end, the mind is freed, and is said to be well freed."
        },
        {
          "scid": "sn22.51:1.6",
          "pli": "Aniccaññeva, bhikkhave, bhikkhu vedanaṃ aniccanti passati. Sāssa hoti sammādiṭṭhi.",
          "en": "Feeling …"
        },
        {
          "scid": "sn22.51:1.7",
          "pli": "Sammā passaṃ nibbindati.",
          "en": ""
        },
        {
          "scid": "sn22.51:1.8",
          "pli": "Nandikkhayā rāgakkhayo, rāgakkhayā nandikkhayo.",
          "en": ""
        },
        {
          "scid": "sn22.51:1.9",
          "pli": "Nandirāgakkhayā cittaṃ vimuttaṃ suvimuttanti vuccati.",
          "en": ""
        },
        {
          "scid": "sn22.51:1.10",
          "pli": "Aniccaññeva, bhikkhave, bhikkhu saññaṃ aniccanti passati … pe …",
          "en": "Perception …"
        },
        {
          "scid": "sn22.51:1.11",
          "pli": "anicceyeva bhikkhave, bhikkhu saṅkhāre aniccāti passati. Sāssa hoti sammādiṭṭhi.",
          "en": "Choices …"
        },
        {
          "scid": "sn22.51:1.12",
          "pli": "Sammā passaṃ nibbindati.",
          "en": ""
        },
        {
          "scid": "sn22.51:1.13",
          "pli": "Nandikkhayā rāgakkhayo, rāgakkhayā nandikkhayo.",
          "en": ""
        },
        {
          "scid": "sn22.51:1.14",
          "pli": "Nandirāgakkhayā cittaṃ vimuttaṃ suvimuttanti vuccati.",
          "en": ""
        },
        {
          "scid": "sn22.51:1.15",
          "pli": "Aniccaññeva, bhikkhave, bhikkhu viññāṇaṃ aniccanti passati. Sāssa hoti sammādiṭṭhi.",
          "en": "Consciousness really is impermanent. A mendicant sees that it is impermanent: that’s their right view."
        },
        {
          "scid": "sn22.51:1.16",
          "pli": "Sammā passaṃ nibbindati.",
          "en": "Seeing rightly, they become disillusioned."
        },
        {
          "scid": "sn22.51:1.17",
          "pli": "Nandikkhayā rāgakkhayo, rāgakkhayā nandikkhayo.",
          "en": "When relishing ends, greed ends. When greed ends, relishing ends."
        },
        {
          "scid": "sn22.51:1.18",
          "pli": "Nandirāgakkhayā cittaṃ vimuttaṃ suvimuttanti vuccatī”ti.",
          "en": "When relishing and greed end, the mind is freed, and is said to be well freed.”"
        },
        {
          "scid": "sn22.51:1.19",
          "pli": "Navamaṃ.",
          "en": ""
        }
      ],
