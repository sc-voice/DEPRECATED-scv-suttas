      "segments": [
        {
          "scid": "sn27.6:1.1",
          "pli": "Sāvatthinidānaṃ.",
          "en": "At Sāvatthī."
        },
        {
          "scid": "sn27.6:1.2",
          "pli": "“Yo, bhikkhave, rūpasaññāya chandarāgo, cittasseso upakkileso.",
          "en": "“Mendicants, desire and greed for perception of sights,"
        },
        {
          "scid": "sn27.6:1.3",
          "pli": "Yo saddasaññāya …",
          "en": "perception of sounds,"
        },
        {
          "scid": "sn27.6:1.4",
          "pli": "yo gandhasaññāya …",
          "en": "perception of smells,"
        },
        {
          "scid": "sn27.6:1.5",
          "pli": "yo rasasaññāya …",
          "en": "perception of tastes,"
        },
        {
          "scid": "sn27.6:1.6",
          "pli": "yo phoṭṭhabbasaññāya …",
          "en": "perception of touches,"
        },
        {
          "scid": "sn27.6:1.7",
          "pli": "yo dhammasaññāya chandarāgo, cittasseso upakkileso.",
          "en": "or perception of thoughts is a corruption of the mind. …”"
        },
        {
          "scid": "sn27.6:1.8",
          "pli": "Yato kho, bhikkhave, bhikkhuno … pe …",
          "en": ""
        },
        {
          "scid": "sn27.6:1.9",
          "pli": "abhiññā sacchikaraṇīyesu dhammesū”ti.",
          "en": ""
        },
        {
          "scid": "sn27.6:1.10",
          "pli": "Chaṭṭhaṃ.",
          "en": ""
        }
      ],
