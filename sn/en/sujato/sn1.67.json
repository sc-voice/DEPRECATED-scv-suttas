    {
      "segments": [
        {
          "scid": "sn1.67:1.1",
          "pli": "“Kenassu uḍḍito loko,",
          "en": "“What has trapped the world?"
        },
        {
          "scid": "sn1.67:1.2",
          "pli": "kenassu parivārito;",
          "en": "By what is it surrounded?"
        },
        {
          "scid": "sn1.67:1.3",
          "pli": "Kenassu pihito loko,",
          "en": "What has the world fastened shut?"
        },
        {
          "scid": "sn1.67:1.4",
          "pli": "kismiṃ loko patiṭṭhito”ti.",
          "en": "On what is the world grounded?”"
        },
        {
          "scid": "sn1.67:2.1",
          "pli": "“Taṇhāya uḍḍito loko,",
          "en": "“Craving has trapped the world."
        },
        {
          "scid": "sn1.67:2.2",
          "pli": "jarāya parivārito;",
          "en": "It’s surrounded by old age."
        },
        {
          "scid": "sn1.67:2.3",
          "pli": "Maccunā pihito loko,",
          "en": "Mortality has the world fastened shut."
        },
        {
          "scid": "sn1.67:2.4",
          "pli": "dukkhe loko patiṭṭhito”ti.",
          "en": "The world is grounded on suffering.”"
        }
      ],
