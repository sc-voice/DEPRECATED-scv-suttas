    {
      "segments": [
        {
          "scid": "sn37.14:1.1",
          "pli": "“Pañcahi, anuruddha, dhammehi samannāgato mātugāmo … pe … nirayaṃ upapajjati.",
          "en": "“Anuruddha, when they have five qualities females—when their body breaks up, after death—are reborn in a place of loss, a bad place, the underworld, hell."
        },
        {
          "scid": "sn37.14:1.2",
          "pli": "Katamehi pañcahi?",
          "en": "What five?"
        },
        {
          "scid": "sn37.14:1.3",
          "pli": "Pāṇātipātī ca hoti, adinnādāyī ca hoti, kāmesumicchācārī ca hoti, musāvādī ca hoti, surāmerayamajjappamādaṭṭhāyī ca hoti—",
          "en": "They kill living creatures, steal, commit sexual misconduct, lie, and consume alcoholic drinks that cause negligence."
        },
        {
          "scid": "sn37.14:1.4",
          "pli": "imehi kho, anuruddha, pañcahi dhammehi samannāgato mātugāmo kāyassa bhedā paraṃ maraṇā apāyaṃ duggatiṃ vinipātaṃ nirayaṃ upapajjatī”ti.",
          "en": "When they have these five qualities females—when their body breaks up, after death—are reborn in a place of loss, a bad place, the underworld, hell.”"
        },
        {
          "scid": "sn37.14:1.5",
          "pli": "Cuddasamaṃ.",
          "en": ""
        },
        {
          "scid": "sn37.14:1.6",
          "pli": "Paṭhamapeyyālavaggo.",
          "en": ""
        },
        {
          "scid": "sn37.14:2.1",
          "pli": "Mātugāmo puriso ca,",
          "en": ""
        },
        {
          "scid": "sn37.14:2.2",
          "pli": "āveṇikā tidhammo ca;",
          "en": ""
        },
        {
          "scid": "sn37.14:2.3",
          "pli": "Kodhano upanāhī ca,",
          "en": ""
        },
        {
          "scid": "sn37.14:2.4",
          "pli": "issukī maccharena ca;",
          "en": ""
        },
        {
          "scid": "sn37.14:2.5",
          "pli": "Aticārī ca dussīlo,",
          "en": ""
        },
        {
          "scid": "sn37.14:2.6",
          "pli": "appassuto ca kusīto;",
          "en": ""
        },
        {
          "scid": "sn37.14:2.7",
          "pli": "Muṭṭhassati pañcaveraṃ,",
          "en": ""
        },
        {
          "scid": "sn37.14:2.8",
          "pli": "kaṇhapakkhe pakāsito.",
          "en": ""
        }
      ],
