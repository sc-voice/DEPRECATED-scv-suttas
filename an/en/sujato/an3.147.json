    {
      "segments": [
        {
          "scid": "an3.147:1.1",
          "pli": "“Tīhi, bhikkhave, dhammehi samannāgato yathābhataṃ nikkhitto evaṃ niraye.",
          "en": "“Someone with three qualities is cast down to hell."
        },
        {
          "scid": "an3.147:1.2",
          "pli": "Katamehi tīhi?",
          "en": "What three?"
        },
        {
          "scid": "an3.147:1.3",
          "pli": "Sāvajjena kāyakammena, sāvajjena vacīkammena, sāvajjena manokammena—",
          "en": "Blameworthy deeds by way of body, speech, and mind."
        },
        {
          "scid": "an3.147:1.4",
          "pli": "imehi kho, bhikkhave, tīhi dhammehi samannāgato yathābhataṃ nikkhitto evaṃ niraye.",
          "en": "Someone with these three qualities is cast down to hell."
        },
        {
          "scid": "an3.147:2.1",
          "pli": "Tīhi, bhikkhave, dhammehi samannāgato yathābhataṃ nikkhitto evaṃ sagge.",
          "en": "Someone with three qualities is raised up to heaven."
        },
        {
          "scid": "an3.147:2.2",
          "pli": "Katamehi tīhi?",
          "en": "What three?"
        },
        {
          "scid": "an3.147:2.3",
          "pli": "Anavajjena kāyakammena, anavajjena vacīkammena, anavajjena manokammena—",
          "en": "Blameless deeds by way of body, speech, and mind."
        },
        {
          "scid": "an3.147:2.4",
          "pli": "imehi kho … pe … evaṃ sagge”ti.",
          "en": "Someone with these three qualities is raised up to heaven.”"
        },
        {
          "scid": "an3.147:2.5",
          "pli": "Dutiyaṃ.",
          "en": ""
        }
      ],
