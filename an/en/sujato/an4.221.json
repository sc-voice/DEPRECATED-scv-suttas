    {
      "segments": [
        {
          "scid": "an4.221:1.1",
          "pli": "“Cattārimāni, bhikkhave, vacīduccaritāni.",
          "en": "“Mendicants, there are these four kinds of bad conduct by way of speech."
        },
        {
          "scid": "an4.221:1.2",
          "pli": "Katamāni cattāri?",
          "en": "What four?"
        },
        {
          "scid": "an4.221:1.3",
          "pli": "Musāvādo, pisuṇā vācā, pharusā vācā, samphappalāpo—",
          "en": "Speech that’s false, divisive, harsh, or nonsensical."
        },
        {
          "scid": "an4.221:1.4",
          "pli": "imāni kho, bhikkhave, cattāri vacīduccaritāni.",
          "en": "These are the four kinds of bad conduct by way of speech."
        },
        {
          "scid": "an4.221:1.5",
          "pli": "Cattārimāni, bhikkhave, vacīsucaritāni.",
          "en": "There are these four kinds of good conduct by way of speech."
        },
        {
          "scid": "an4.221:1.6",
          "pli": "Katamāni cattāri?",
          "en": "What four?"
        },
        {
          "scid": "an4.221:1.7",
          "pli": "Saccavācā, apisuṇā vācā, saṇhā vācā, mantavācā—",
          "en": "Speech that’s true, harmonious, gentle, and thoughtful."
        },
        {
          "scid": "an4.221:1.8",
          "pli": "imāni kho, bhikkhave, cattāri vacīsucaritānī”ti.",
          "en": "These are the four kinds of good conduct by way of speech.”"
        },
        {
          "scid": "an4.221:1.9",
          "pli": "Paṭhamaṃ.",
          "en": ""
        }
      ],
