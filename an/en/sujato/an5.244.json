    {
      "segments": [
        {
          "scid": "an5.244:1.1",
          "pli": "“Pañcime, bhikkhave, ādīnavā manoduccarite … pe … ānisaṃsā manosucarite.",
          "en": "“Mendicants, there are these five drawbacks in bad mental conduct … benefits in good mental conduct …”"
        },
        {
          "scid": "an5.244:1.2",
          "pli": "Katame pañca?",
          "en": ""
        },
        {
          "scid": "an5.244:1.3",
          "pli": "Attāpi attānaṃ na upavadati;",
          "en": ""
        },
        {
          "scid": "an5.244:1.4",
          "pli": "anuvicca viññū pasaṃsanti;",
          "en": ""
        },
        {
          "scid": "an5.244:1.5",
          "pli": "kalyāṇo kittisaddo abbhuggacchati;",
          "en": ""
        },
        {
          "scid": "an5.244:1.6",
          "pli": "asammūḷho kālaṃ karoti;",
          "en": ""
        },
        {
          "scid": "an5.244:1.7",
          "pli": "kāyassa bhedā paraṃ maraṇā sugatiṃ saggaṃ lokaṃ upapajjati.",
          "en": ""
        },
        {
          "scid": "an5.244:1.8",
          "pli": "Ime kho, bhikkhave, pañca ānisaṃsā manosucarite”ti.",
          "en": ""
        },
        {
          "scid": "an5.244:1.9",
          "pli": "Catutthaṃ.",
          "en": ""
        }
      ],
