        {
          "scid": "an11.22-29:1.1",
          "pli": "Aṅguttara Nikāya 11",
          "en": ""
        },
        {
          "scid": "an11.22-29:2.1",
          "pli": "Paṭhamapaṇṇāsaka",
          "en": ""
        },
        {
          "scid": "an11.22-29:3.1",
          "pli": "Sāmaññavagga",
          "en": ""
        },
        {
          "scid": "an11.22-29:4.1",
          "pli": "AN 11.22–29",
          "en": ""
        },
        {
          "scid": "an11.22-29:5.1",
          "pli": "“Ekādasahi, bhikkhave, aṅgehi samannāgato gopālako abhabbo gogaṇaṃ pariharituṃ phātiṃ kātuṃ.",
          "en": ""
        },
        {
          "scid": "an11.22-29:5.2",
          "pli": "Katamehi ekādasahi?",
          "en": ""
        },
        {
          "scid": "an11.22-29:5.3",
          "pli": "Idha, bhikkhave, gopālako na rūpaññū hoti, na lakkhaṇakusalo hoti, na āsāṭikaṃ hāretā hoti, na vaṇaṃ paṭicchādetā hoti, na dhūmaṃ kattā hoti, na titthaṃ jānāti, na pītaṃ jānāti, na vīthiṃ jānāti, na gocarakusalo hoti, anavasesadohī ca hoti, ye te usabhā gopitaro gopariṇāyakā te na atirekapūjāya pūjetā hoti—",
          "en": ""
        },
        {
          "scid": "an11.22-29:5.4",
          "pli": "imehi kho, bhikkhave, ekādasahi aṅgehi samannāgato gopālako abhabbo gogaṇaṃ pariharituṃ phātiṃ kātuṃ.",
          "en": ""
        },
        {
          "scid": "an11.22-29:6.1",
          "pli": "Evamevaṃ kho, bhikkhave, ekādasahi dhammehi samannāgato bhikkhu abhabbo cakkhusmiṃ aniccānupassī viharituṃ…",
          "en": ""
        },
        {
          "scid": "an11.22-29:6.2",
          "pli": "pe…",
          "en": ""
        },
        {
          "scid": "an11.22-29:6.3",
          "pli": "abhabbo cakkhusmiṃ dukkhānupassī viharituṃ…",
          "en": ""
        },
        {
          "scid": "an11.22-29:6.4",
          "pli": "abhabbo cakkhusmiṃ anattānupassī viharituṃ…",
          "en": ""
        },
        {
          "scid": "an11.22-29:6.5",
          "pli": "abhabbo cakkhusmiṃ khayānupassī viharituṃ…",
          "en": ""
        },
        {
          "scid": "an11.22-29:6.6",
          "pli": "abhabbo cakkhusmiṃ vayānupassī viharituṃ…",
          "en": ""
        },
        {
          "scid": "an11.22-29:6.7",
          "pli": "abhabbo cakkhusmiṃ virāgānupassī viharituṃ…",
          "en": ""
        },
        {
          "scid": "an11.22-29:6.8",
          "pli": "abhabbo cakkhusmiṃ nirodhānupassī viharituṃ…",
          "en": ""
        },
        {
          "scid": "an11.22-29:6.9",
          "pli": "abhabbo cakkhusmiṃ paṭinissaggānupassī viharituṃ”.",
          "en": ""
        }
      ],
