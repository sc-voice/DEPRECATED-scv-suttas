        {
          "scid": "an3.152:1.1",
          "pli": "“Tīhi, bhikkhave … pe …",
          "en": "“When a foolish, incompetent, bad person has three qualities they keep themselves broken and damaged. …"
        },
        {
          "scid": "an3.152:1.2",
          "pli": "visamena kāyakammena, visamena vacīkammena, visamena manokammena … pe ….",
          "en": "Unethical deeds by way of body, speech, and mind. …"
        },
        {
          "scid": "an3.152:2.1",
          "pli": "Tīhi, bhikkhave … pe …",
          "en": "When an astute, competent, good person has three qualities they keep themselves healthy and whole. …"
        },
        {
          "scid": "an3.152:2.2",
          "pli": "samena kāyakammena, samena vacīkammena, samena manokammena … pe ….",
          "en": "Ethical deeds by way of body, speech, and mind. …”"
        },
        {
          "scid": "an3.152:2.3",
          "pli": "Sattamaṃ.",
          "en": ""
