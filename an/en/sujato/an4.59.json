    {
      "segments": [
        {
          "scid": "an4.59:1.1",
          "pli": "“Bhojanaṃ, bhikkhave, dadamāno dāyako paṭiggāhakānaṃ cattāri ṭhānāni deti.",
          "en": "“Mendicants, when a noble disciple gives food, they give the recipients four things."
        },
        {
          "scid": "an4.59:1.2",
          "pli": "Katamāni cattāri?",
          "en": "What four?"
        },
        {
          "scid": "an4.59:1.3",
          "pli": "Āyuṃ deti, vaṇṇaṃ deti, sukhaṃ deti, balaṃ deti.",
          "en": "Long life, beauty, happiness, and strength. …”"
        },
        {
          "scid": "an4.59:1.4",
          "pli": "Āyuṃ kho pana datvā āyussa bhāgī hoti dibbassa vā mānusassa vā.",
          "en": ""
        },
        {
          "scid": "an4.59:1.5",
          "pli": "Vaṇṇaṃ datvā … sukhaṃ datvā … balaṃ datvā balassa bhāgī hoti dibbassa vā mānusassa vā.",
          "en": ""
        },
        {
          "scid": "an4.59:1.6",
          "pli": "Bhojanaṃ, bhikkhave, dadamāno dāyako paṭiggāhakānaṃ imāni cattāri ṭhānāni detīti.",
          "en": ""
        },
        {
          "scid": "an4.59:2.1",
          "pli": "Yo saññatānaṃ paradattabhojinaṃ,",
          "en": ""
        },
        {
          "scid": "an4.59:2.2",
          "pli": "Kālena sakkacca dadāti bhojanaṃ;",
          "en": ""
        },
        {
          "scid": "an4.59:2.3",
          "pli": "Cattāri ṭhānāni anuppavecchati,",
          "en": ""
        },
        {
          "scid": "an4.59:2.4",
          "pli": "Āyuñca vaṇṇañca sukhaṃ balañca.",
          "en": ""
        },
        {
          "scid": "an4.59:3.1",
          "pli": "So āyudāyī vaṇṇadāyī,",
          "en": ""
        },
        {
          "scid": "an4.59:3.2",
          "pli": "sukhaṃ balaṃ dado naro;",
          "en": ""
        },
        {
          "scid": "an4.59:3.3",
          "pli": "Dīghāyu yasavā hoti,",
          "en": ""
        },
        {
          "scid": "an4.59:3.4",
          "pli": "yattha yatthūpapajjatī”ti.",
          "en": ""
        },
        {
          "scid": "an4.59:3.5",
          "pli": "Navamaṃ.",
          "en": ""
        }
      ],
