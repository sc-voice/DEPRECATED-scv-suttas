    {
      "segments": [
        {
          "scid": "an10.148:1.1",
          "pli": "“Sappurisadhammañca vo, bhikkhave, desessāmi asappurisadhammañca.",
          "en": "“Mendicants, I will teach you the principle of a good person and the principle of a bad person. …"
        },
        {
          "scid": "an10.148:1.2",
          "pli": "Taṃ suṇātha … pe …",
          "en": ""
        },
        {
          "scid": "an10.148:1.3",
          "pli": "katamo ca, bhikkhave, asappurisadhammo?",
          "en": "And what is the principle of a bad person?"
        },
        {
          "scid": "an10.148:1.4",
          "pli": "Micchādiṭṭhi … pe … micchāvimutti—",
          "en": "Wrong view, wrong thought, wrong speech, wrong action, wrong livelihood, wrong effort, wrong mindfulness, wrong immersion, wrong knowledge, and wrong freedom."
        },
        {
          "scid": "an10.148:1.5",
          "pli": "ayaṃ vuccati, bhikkhave, asappurisadhammo.",
          "en": "This is the principle of a bad person."
        },
        {
          "scid": "an10.148:1.6",
          "pli": "Katamo ca, bhikkhave, sappurisadhammo?",
          "en": "And what is the principle of a good person?"
        },
        {
          "scid": "an10.148:1.7",
          "pli": "Sammādiṭṭhi … pe … sammāvimutti—",
          "en": "Right view, right thought, right speech, right action, right livelihood, right effort, right mindfulness, right immersion, right knowledge, and right freedom."
        },
        {
          "scid": "an10.148:1.8",
          "pli": "ayaṃ vuccati, bhikkhave, sappurisadhammo”ti.",
          "en": "This is the principle of a good person.”"
        },
        {
          "scid": "an10.148:1.9",
          "pli": "Catutthaṃ.",
          "en": ""
        }
      ],
