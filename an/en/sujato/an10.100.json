    {
      "segments": [
        {
          "scid": "an10.100:1.1",
          "pli": "“Dasayime, bhikkhave, dhamme appahāya abhabbo arahattaṃ sacchikātuṃ.",
          "en": "“Mendicants, without giving up ten things you can’t realize perfection."
        },
        {
          "scid": "an10.100:1.2",
          "pli": "Katame dasa?",
          "en": "What ten?"
        },
        {
          "scid": "an10.100:1.3",
          "pli": "Rāgaṃ, dosaṃ, mohaṃ, kodhaṃ, upanāhaṃ, makkhaṃ, paḷāsaṃ, issaṃ, macchariyaṃ, mānaṃ—",
          "en": "Greed, hate, delusion, anger, hostility, offensiveness, contempt, jealousy, stinginess, and conceit."
        },
        {
          "scid": "an10.100:1.4",
          "pli": "ime kho, bhikkhave, dasa dhamme appahāya abhabbo arahattaṃ sacchikātuṃ.",
          "en": "Without giving up these ten things you can’t realize perfection."
        },
        {
          "scid": "an10.100:2.1",
          "pli": "Dasayime, bhikkhave, dhamme pahāya bhabbo arahattaṃ sacchikātuṃ.",
          "en": "After giving up ten things you can realize perfection."
        },
        {
          "scid": "an10.100:2.2",
          "pli": "Katame dasa?",
          "en": "What ten?"
        },
        {
          "scid": "an10.100:2.3",
          "pli": "Rāgaṃ, dosaṃ, mohaṃ, kodhaṃ, upanāhaṃ, makkhaṃ, paḷāsaṃ, issaṃ, macchariyaṃ, mānaṃ—",
          "en": "Greed, hate, delusion, anger, hostility, offensiveness, contempt, jealousy, stinginess, and conceit."
        },
        {
          "scid": "an10.100:2.4",
          "pli": "ime kho, bhikkhave, dasa dhamme pahāya bhabbo arahattaṃ sacchikātun”ti.",
          "en": "After giving up these ten things you can realize perfection.”"
        },
        {
          "scid": "an10.100:2.5",
          "pli": "Dasamaṃ.",
          "en": ""
        },
        {
          "scid": "an10.100:2.6",
          "pli": "Upālivaggo pañcamo.",
          "en": ""
        },
        {
          "scid": "an10.100:3.1",
          "pli": "Kāmabhogī bhayaṃ diṭṭhi,",
          "en": ""
        },
        {
          "scid": "an10.100:3.2",
          "pli": "vajjiyamāhituttiyā;",
          "en": ""
        },
        {
          "scid": "an10.100:3.3",
          "pli": "Kokanudo āhuneyyo,",
          "en": ""
        },
        {
          "scid": "an10.100:3.4",
          "pli": "thero upāli abhabboti.",
          "en": ""
        },
        {
          "scid": "an10.100:3.5",
          "pli": "Dutiyo paṇṇāsako samatto.",
          "en": ""
        }
      ],
