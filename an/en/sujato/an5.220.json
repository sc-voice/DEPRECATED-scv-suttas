    {
      "segments": [
        {
          "scid": "an5.220:1.1",
          "pli": "“Pañcime, bhikkhave, ādīnavā madhurāyaṃ.",
          "en": "“Mendicants, there are these five drawbacks of Madhurā."
        },
        {
          "scid": "an5.220:1.2",
          "pli": "Katame pañca?",
          "en": "What five?"
        },
        {
          "scid": "an5.220:1.3",
          "pli": "Visamā, bahurajā, caṇḍasunakhā, vāḷayakkhā, dullabhapiṇḍā.",
          "en": "The ground is uneven and dusty, the dogs are fierce, the native spirits are vicious, and it’s hard to get almsfood."
        },
        {
          "scid": "an5.220:1.4",
          "pli": "Ime kho, bhikkhave, pañca ādīnavā madhurāyan”ti.",
          "en": "These are the five drawbacks of Madhurā.”"
        },
        {
          "scid": "an5.220:1.5",
          "pli": "Dasamaṃ.",
          "en": ""
        },
        {
          "scid": "an5.220:1.6",
          "pli": "Akkosakavaggo dutiyo.",
          "en": ""
        },
        {
          "scid": "an5.220:2.1",
          "pli": "Akkosabhaṇḍanasīlaṃ,",
          "en": ""
        },
        {
          "scid": "an5.220:2.2",
          "pli": "bahubhāṇī dve akhantiyo;",
          "en": ""
        },
        {
          "scid": "an5.220:2.3",
          "pli": "Apāsādikā dve vuttā,",
          "en": ""
        },
        {
          "scid": "an5.220:2.4",
          "pli": "aggismiṃ madhurena cāti.",
          "en": ""
        }
      ],
