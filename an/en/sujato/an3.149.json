    {
      "segments": [
        {
          "scid": "an3.149:1.1",
          "pli": "“Tīhi, bhikkhave … pe …",
          "en": "“Someone with three qualities is cast down to hell. …"
        },
        {
          "scid": "an3.149:1.2",
          "pli": "asucinā kāyakammena, asucinā vacīkammena, asucinā manokammena—",
          "en": "Filthy deeds by way of body, speech, and mind. …"
        },
        {
          "scid": "an3.149:1.3",
          "pli": "imehi kho … pe … evaṃ niraye.",
          "en": ""
        },
        {
          "scid": "an3.149:2.1",
          "pli": "Tīhi, bhikkhave … pe …",
          "en": "Someone with three qualities is raised up to heaven. …"
        },
        {
          "scid": "an3.149:2.2",
          "pli": "sucinā kāyakammena, sucinā vacīkammena, sucinā manokammena—",
          "en": "Pure deeds by way of body, speech, and mind. …”"
        },
        {
          "scid": "an3.149:2.3",
          "pli": "imehi kho, bhikkhave, tīhi dhammehi samannāgato yathābhataṃ nikkhitto evaṃ sagge”ti.",
          "en": ""
        },
        {
          "scid": "an3.149:2.4",
          "pli": "Catutthaṃ.",
          "en": ""
        }
      ],
