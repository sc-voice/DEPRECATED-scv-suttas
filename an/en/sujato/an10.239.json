        {
          "scid": "an10.239:1.1",
          "pli": "“Rāgassa, bhikkhave, abhiññāya dasa dhammā bhāvetabbā.",
          "en": "“For insight into greed, ten things should be developed."
        },
        {
          "scid": "an10.239:1.2",
          "pli": "Katame dasa?",
          "en": "What ten?"
        },
        {
          "scid": "an10.239:1.3",
          "pli": "Sammādiṭṭhi, sammāsaṅkappo, sammāvācā, sammākammanto, sammāājīvo, sammāvāyāmo, sammāsati, sammāsamādhi, sammāñāṇaṃ, sammāvimutti—",
          "en": "Right view, right thought, right speech, right action, right livelihood, right effort, right mindfulness, right immersion, right knowledge, and right freedom."
        },
        {
          "scid": "an10.239:1.4",
          "pli": "rāgassa, bhikkhave, abhiññāya ime dasa dhammā bhāvetabbā”ti.",
          "en": "For insight into greed, these ten things should be developed.”"
        }
      ],
